<?xml version="1.0"?>

<launch>
    <include file="$(find irobot_worlds)/launch/empty_world.launch">
        <arg name="paused" default="false"/>
        <arg name="use_sim_time" default="true"/>
        <arg name="gui" default="true"/>
        <arg name="headless" default="false"/>
        <arg name="debug" default="false"/>
        <arg name="verbose" default="false"/>
        <arg name="world_name" default="world/one_iRobot_at_CPwf_and_people.world"/>
    </include>
        
    <node name="laser_static_tf" pkg="tf" type="static_transform_publisher" args="0 0 0.11 0 0 0 /iRobot/base_link /iRobot/hokuyo_laser_link 1000" />
    <node name="imu_static_tf" pkg="tf" type="static_transform_publisher" args="-0.1 0 0.6 0 0 0 /iRobot/base_link /iRobot/imu_sensor_link 1000" />
    <node name="camera_static_tf" pkg="tf" type="static_transform_publisher" args="0 0 0.15 -1.57079 0 -1.57079 /iRobot/base_link /iRobot/camera_link 1000" />
<!--    <node name="camera_static_tf" pkg="tf" type="static_transform_publisher" args="0 0 0.15 0 0 0 /iRobot/base_link /iRobot/camera_link 1000" />-->
    
    <node name="person_controller" pkg="irobot_worlds" type="person_move" />
</launch>
